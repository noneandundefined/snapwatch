<UserControl x:Class="snapwatch.View.Story"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:snapwatch.View"
             mc:Ignorable="d" 
             Background="#0f0f0f"
             d:DesignHeight="700" d:DesignWidth="775">

    <Border Padding="11">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="200" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" HorizontalAlignment="Stretch">
                    <TextBlock Margin="15 0" FontSize="15" HorizontalAlignment="Left" Panel.ZIndex="1" 
                               Text="Search" Style="{StaticResource Font}" Padding="0 10 0 0" Foreground="#555"
                               x:Name="PlaceholderSearch" />
                    <TextBox Style="{StaticResource TextBoxSearch_Style}" x:Name="SearchTextBox" HorizontalAlignment="Stretch">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4" />
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="BorderBrush" Value="#333" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </Grid>
            </Grid>

            <!-- Кнопка -->
            <StackPanel Grid.Row="1" VerticalAlignment="Bottom" Margin="0 10 0 0">
                <Grid>
                    <Border Background="{StaticResource ColorRed}" CornerRadius="7" Padding="8">
                        <Label Content="ПОДОБРАТЬ" VerticalAlignment="Center" HorizontalAlignment="Center" 
                            Style="{StaticResource Font}" Foreground="#fff" FontSize="15" Margin="0 -4 0 0" />

                        <Border.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#940000" Duration="0:0:0.08" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="MouseLeave">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)" To="#FFFF2400" Duration="0:0:0.03" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                    </Border>
                    <Border Background="#000" Opacity="0.4" Height="9" VerticalAlignment="Bottom" />
                </Grid>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
