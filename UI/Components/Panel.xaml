<UserControl x:Class="snapwatch.UI.Components.Panel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:snapwatch.UI.Components"
             xmlns:vm="clr-namespace:snapwatch.ViewModel"
             mc:Ignorable="d" Background="#000"
             d:DesignHeight="700" d:DesignWidth="100">

    <UserControl.DataContext>
        <vm:PanelVM />
    </UserControl.DataContext>

    <Border CornerRadius="0 10 10 0" BorderThickness="1" BorderBrush="{StaticResource ColorBorder}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Padding="10">
                <StackPanel HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="0 20 0 30">
                        <Image Source="pack://application:,,,/Public/images/snapwatch-40px.png" Width="50" />
                    </StackPanel>

                    <ItemsControl x:Name="menuItems" ItemsSource="{Binding MenuItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource ButtonPanel_Style}">
                                    <Border.InputBindings>
                                        <MouseBinding Gesture="LeftClick"
                                                  Command="{Binding ElementName=menuItems, Path=DataContext.MenuItemClickCommand}"
                                                  CommandParameter="{Binding PathView}" />
                                    </Border.InputBindings>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{Binding Image}" Width="24" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
